@model IEnumerable<TravelBlog.Models.Location>

<html>
    <head>
    </head>
	
    <body>
		
     <h2>This is the Location Index</h2>

    	<table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th></th>
            </tr>

            @foreach(var location in Model)
			{
			    <tr> 
                    <td>
                        @Html.ActionLink(location.Name, "Details", new { id = location.LocationId })
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => location.Description)
                    </td>
                    <td>
                        @Html.ActionLink("Delete", "Delete", new { id = location.LocationId })
                    </td>
				     <td>
                        @Html.ActionLink("Update", "Update", new { id = location.LocationId })
                    </td>
                    <td>
                        @Html.ActionLink("Create Experience", "Create", "Experience", new { locationId = location.LocationId })
                    </td>
				
                </tr>
			}

			<ul>
    			@foreach(var person in ViewBag.people)
    			{
                    <li>@Html.ActionLink((string)person.Name, "Details", "Person", new { id = person.PersonId })</li>
                    <li>@Html.ActionLink("Add Location to "+(string)person.Name, "AddLocation", "Person", new { PersonId = person.PersonId})</li>
    			}
			</ul>
			
    	</table>

		<p>@Html.ActionLink("Create New", "Create")</p>

		<p>@Html.ActionLink("Create Person", "Create", "Person")</p>
    </body>
</html>