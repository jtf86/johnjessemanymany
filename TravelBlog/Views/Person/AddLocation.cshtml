@model TravelBlog.Models.LocationPerson

Add a location for @ViewBag.Person.Name

@using (Html.BeginForm())
{
    <input type="hidden" name="PersonId" value="@ViewBag.Person.PersonId" />  

    @Html.LabelFor(m=>m.LocationId)
    @Html.DropDownList("LocationId")
    <input type="submit" value="Add new location" />
}